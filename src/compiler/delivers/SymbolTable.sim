package simple.compiler.delivers

class SymbolTable

	nextIndex = 0
	scopes = []
	globalScope = new Scope()
	nextGlobalIndex = 0

	block SymbolTable()
		nextIndex = 0
		
		
	block isGlobalScope()
		return scopes.peek() == globalScope
		
class Scope

	block Scope()
		