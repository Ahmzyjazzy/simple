class SymbolTable

	nextIndex = 0
	scopes = []
	globalScope = new Scope()
	nextGlobalIndex = 0
	stack = new Stack()

	block SymbolTable()
		nextIndex = 0
		scope = new Scope()
		stack.push(scope)
		
		
		
		
	block isGlobalScope()
		return scopes.peek() == globalScope
		
class Scope

	symbols = new simple.utilities.Dictionary

	block Scope()
		
	block getSymbols()
		return symbols	