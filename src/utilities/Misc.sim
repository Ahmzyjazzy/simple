#1
block print(content)
	inContent = ""
	if -> isNumber(content) 
		content = ""+content
	end
	for a = 0 to len(content)
		switch content[a]
			case '\'
				a++
				switch content[a]
				case '\'
					inContent +=  '\'
				case "n"
					inContent +=  crlf
				case "t"
					inContent +=  char(9)
				case "r" 
					inContent +=  char(13)
				end
			default 
				inContent +=  content[a]
		end
	loop 
	display inContent
	
block println(con)
	print(con+"\n")

