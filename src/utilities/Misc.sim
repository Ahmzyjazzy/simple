block stringEquals(o, n)
	if -> stringCompare(o, n) == 0
		return true
	else 
		return false
	end

#9	
block stringContains(m, s)
		if subString(m, s) == 0
			return false
		else 
			return true
		end
	
#10 
block startWith(m, s)
	for a = 0 to len(s)
		try 
			if -> stringEquals(m[a], s[a]) == false
				return false
			end
		catch 
			return false
		end
		
	loop
	return true
	
